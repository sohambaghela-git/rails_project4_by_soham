<div style="width:100%; height:600px; " >
	<h2>Welcome to Ruby on Rails </h2>
	<br></br>
	<div style="width:100%; "	>
		<table style="width:100%; border: 1px solid" >
			<tr style="width:100%; text-align: left; border: 1px solid">
				<th>S.No</th>
				<th>Product Name</th>
				<th>Product Feature</th>
				<th>Product price</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
			<% temp=1 %>
				<tr style="width:100%">
					<td><%= temp %></td>
					<td><%= @product.name  %></td>
					<td><%= @product.feature %></td>
					<td><%= @product.price %> rs</td>
					<td><%= link_to "Edit", edit_product_path(@product), class:"btn btn-secondary" %></td>
					<td><%= link_to "Destroy", product_path(@product.id), class:"btn btn-warning"  ,data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
					<% temp+=1 %>
				</tr>

		<table>
		<br></br>

	</div>
</div>

